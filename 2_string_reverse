/*2 Распечатать строку в обратном порядке*/

#include<stdio.h>
#include<string.h>
#define MAXLEN 100

int main(){
    char str[MAXLEN];
    char temp;
    fgets(str, MAXLEN, stdin);
    
    size_t len = strlen(str);
    
    if (len > 0 && str[len - 1] == '\n') {
            str[len - 1] = '\0';
            len--;
        }
        
    for (int i = 0; i < len/2; i++) {
        temp = str[i];              
        str[i] = str[len - i - 1];
        str[len - i - 1] = temp;
        }
    
    printf("%s", str);
    
    return 0;
    }
